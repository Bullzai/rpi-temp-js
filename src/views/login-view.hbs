<section class="section">
  {{> welcome-menu active="login"}}

  <div class="columns is-mobile is-centered">
    <div class="column is-half">
      {{!-- <h1 class="title">Log in</h1> --}}
      <form action="/authenticate" method="POST">
        <div class="field">
          <label class="label">Username</label> <input class="input" type="text" placeholder="Enter username"
            name="username">
        </div>
        <div class="field">
          <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password"
            name="password">
        </div>
        <div class="field is-grouped">
          <button class="button is-link">Login</button>
        </div>
      </form>
    </div>
  </div>

</section>